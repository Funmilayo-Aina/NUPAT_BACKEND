@{
    ViewData["Title"] = "Create/Edit";
}
@model ExpenseTracker.Models.Expense

<div class="text-center">
    <h1 class="display-4">Create or edit an expense</h1>
   
</div>

<form asp-action="CreateEditExpenseForm" asp-controller="Home" >
    <label class=" mt-4"> Id</label>
    <input hidden class ="form-control" type="number" name="ID" placeholder ="1234" asp-for="Id" />

    <label class=" mt-4"> Value $ </label>
    <input class="form-control" type="number" name="Value" placeholder="Price" asp-for="Value"  step="0.01"/>
    <label class=" mt-4"> Description</label>

    <input class="form-control" type="text" name="Description" placeholder="Add a description" asp-for="Description" />

    <button class=" btn btn-primary mt-4" type="submit">Ok</button>
    
 </form>
