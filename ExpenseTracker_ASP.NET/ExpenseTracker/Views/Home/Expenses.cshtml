@{
    ViewData["Title"] = "Expenses";
}

@model List<Expense>
<div class="text-center">
    <h1 class="display-4">Expenses</h1>
    <br />
    <br />
    <hr />----------------------------
    <h3> Total Expenses in $@ViewBag.Expenses</h3>
    <br />


    <table class="table-bordered">
        <thead>
            <tr>
                <th>
                    Id 
                </th>
                <th>
                    value               
                </th>
                <th>
                    Description
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach ( var expense in Model)
                {
                    <tr>
                       <td>
                         @expense.Id
                       </td>
                       <td>
                         @expense.Value
                       </td>
                        <td>
                            @expense.Description
                        </td>
                        <td>
                            <a asp-action="CreateEditExpense" asp-route-id="@expense.Id"> Edit:

                            </a>
                            <a asp-action="DeleteExpense" asp-route-id="@expense.Id">
                                Delete:

                            </a>
                        </td>

                    </tr>
                }
            }
        </tbody>
    </table>
</div>
